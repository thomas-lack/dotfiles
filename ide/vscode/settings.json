// Platzieren Sie Ihre Einstellungen in dieser Datei, um die Standardeinstellungen zu Ã¼berschreiben.
{
    "telemetry.enableCrashReporter": false,
    "files.trimTrailingWhitespace": true,
    "editor.fontFamily": "FuraCode Nerd Font Mono, Roboto Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.fontWeight": "600",
    "editor.fontLigatures": true,
    "workbench.fontAliasing": "antialiased",
    "editor.cursorStyle": "block",
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": true,
    "editor.rulers": [
        100
    ],
    "editor.renderWhitespace": "none",
    "editor.smoothScrolling": true,
    "editor.lineNumbers": "relative",
    "html.autoClosingTags": false,
    "tslint.autoFixOnSave": true,
    "diffEditor.renderSideBySide": false,
    "extensions.autoUpdate": true,
    "explorer.openEditors.visible": 0,
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "'SauceCodePro Nerd Font Mono'",
    "terminal.integrated.fontSize": 12,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/target": true,
        "**/coverage": true
    },
    "path-intellisense.autoSlashAfterDirectory": true,
    "vim.useSystemClipboard": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "2"],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
        {
            "before": ["<leader>", "t"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": ["<leader>", "v"],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": ["<leader>", "h"],
            "commands": [
                "workbench.action.splitEditorOrthogonal"
            ]
        },
        {
            "before": ["<tab>"],
            "commands": [
                "workbench.action.switchWindow"
            ]
        },
        {
            "before": ["J"],
            "after": ["1","5","j","z","z"]
        },
        {
            "before": ["K"],
            "after": ["1","5","k","z","z"]
        },
    ],
    "workbench.colorTheme": "Tomorrow Night Bright",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "window.nativeTabs": true,
    "sonarlint.ls.javaHome": "/Library/Java/JavaVirtualMachines/jdk1.8.0_162.jdk/Contents/Home"
}
