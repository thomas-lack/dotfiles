" enable vim-surround
set surround

" set clipboard as default register
set clipboard=unnamed

" show hybrid relative line numbers
set number relativenumber

" indentation settings
set tabstop=2				" the width of tabs is set to 2
set shiftwidth=2		" indents will have a width of 2
set softtabstop=2		" sets the # of columns for tabs
set expandtab				" expand tabs to spaces
set autoindent

" search settings
set hlsearch							" highlight search terms
set ignorecase						" case insensitive
nmap <CR> :noh<CR>        " press enter to get rid of search results
nnoremap n nzz      
nnoremap N Nzz

" scrolling
set scrolljump=8		" lines to scroll when cursor leaves the screen
set scrolloff=3			" minimum lines to keep above and below cursor
nnoremap J 10jzz
nnoremap K 10kzz

" map ; to "write ; at end of line"
nnoremap ; A;<ESC>

" set number format always to decimal
set nrformats=alpha

" Split window navigation
nmap <C-h> :action VimWindowLeft<CR>
nmap <C-j> :action VimWindowDown<CR>
nmap <C-k> :action VimWindowUp<CR>
nmap <C-l> :action VimWindowRight<CR>
nmap <Tab> :action VimWindowNext<CR>
nmap <S-Tab> :action VimWindowPrev<CR>

" disable error sounds
set noerrorbells visualbell t_vb=

" bufkill settings
map <C-c> :BD<cr>				" map Ctrl-c to close the current buffer

" replace split buffer creation
nmap <leader>v :action SplitVertically<CR>
nmap <leader>h :action SplitHorizontally<CR>

" replace project tree toggle (TODO: repair)
nmap <F2> :action ActivateProjectToolWindow<CR>
nmap <leader>2 :action ActivateProjectToolWindow<CR>

" open fzf alternative
nmap <leader>t :action GotoFile<CR>

" go back after goto command
nmap gb :action Back<CR>
